{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "nodeCount": {
      "type": "int"
    },
    "vmSize": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    }
  },
  "variables": {
    "baseUrl": "https://raw.githubusercontent.com/couchbase-partners/azure-resource-manager-couchbase/",
    "uniqueString": "[uniquestring(resourceGroup().id, deployment().name)]"
  },
  "resources": [
    {
      "name": "nodes",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-02-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('baseUrl'), 'master/simple/nodes.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "nodeCount": {
            "value": "[parameters('nodeCount')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "baseUrl": {
            "value": "[variables('baseUrl')]"
          },
          "uniqueString": {
            "value": "[variables('uniqueString')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "nodeAdminURL": {
      "type": "string",
      "value": "[concat('http://vm0-', variables('uniqueString'), '.', resourceGroup().location, '.cloudapp.azure.com:8091')]"
    }
  }
}
