{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "parameters": {
      "nodeCount": {
        "type": "int",
        "defaultValue": 5,
        "minValue": 1,
        "maxValue": 30
      },
      "vmSize": {
        "type": "string",
        "defaultValue": "Standard_FS2",
        "allowedValues": [
          "Standard_DS1_v2",
          "Standard_DS2_v2",
          "Standard_DS3_v2",
          "Standard_DS4_v2",
          "Standard_DS5_v2",
          "Standard_DS1",
          "Standard_DS2",
          "Standard_DS3",
          "Standard_DS4",
          "Standard_FS1",
          "Standard_FS2",
          "Standard_FS4",
          "Standard_FS8",
          "Standard_FS16",
          "Standard_DS11_v2",
          "Standard_DS12_v2",
          "Standard_DS13_v2",
          "Standard_DS14_v2",
          "Standard_DS15_v2",
          "Standard_DS11",
          "Standard_DS12",
          "Standard_DS13",
          "Standard_DS14",
          "Standard_GS1",
          "Standard_GS2",
          "Standard_GS3",
          "Standard_GS4",
          "Standard_GS5"
        ]
      },
      "adminUsername": {
        "type": "string"
      },
      "adminPassword": {
        "type": "securestring"
      },
    }
  },
  "variables": {
    "templateUrl": "https://raw.githubusercontent.com/couchbase-partners/azure-resource-manager-couchbase/master/simple/",
    "extensionUrl": "https://raw.githubusercontent.com/couchbase-partners/azure-resource-manager-couchbase/master/extensions/",
    "uniqueString": "[uniquestring(resourceGroup().id, deployment().name)]",
    "location": "[resourcegroup().location]",
    "scriptUri": "[parameters('artifactsBaseUrl')]",
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "vnet",
      "location": "[variables('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/16"
          ]
        },
        "subnets": [
          {
            "name": "subnet",
            "properties": {
              "addressPrefix": "10.0.0.0/24"
            }
          }
        ]
      }
    },
    {
      "name": "nodes",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-02-01",
      "dependsOn": [
        "Microsoft.Network/virtualNetworks/vnet"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateUrl'), 'nodes.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "nodeCount": {
            "value": "[parameters('dataNodeCount')]"
          },
          "vmSize": {
            "value": "[parameters('dataVmSize')]"
          },
          "clusterName": {
            "value": "[parameters('clusterName')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "sshKey": {
            "value": "[parameters('sshKey')]"
          },
          "authenticationType": {
            "value": "[parameters('authenticationType')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "scriptUri": {
            "value": "[variables('scriptUri')]"
          },
          "storageAccountBasename": {
            "value": "[variables('storageAccountBasename')]"
          },
          "roleType": {
            "value": "d"
          },
          "vmBasename": {
            "value": "data"
          },
          "ipOffset": {
            "value": 0
          },
          "vnetName": {
            "value": "[parameters('vnetName')]"
          },
          "vnetSubnetName": {
            "value": "[parameters('vnetSubnetName')]"
          },
          "vnetStartAddress": {
            "value": "[parameters('vnetStartAddress')]"
          },
          "vnetRGName": {
            "value": "[parameters('vnetRGName')]"
          },
          "offer": {
            "value": "[parameters('offer')]"
          },
          "sku": {
            "value": "[parameters('sku')]"
          }
        }
      }
    }
  ]
}
