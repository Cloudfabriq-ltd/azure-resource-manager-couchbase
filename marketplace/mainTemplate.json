{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "parameters": {
      "nodeCount": {
        "type": "int"
      },
      "vmSize": {
        "type": "string"
      },
      "adminUsername": {
        "type": "string"
      },
      "adminPassword": {
        "type": "securestring"
      },
      "baseUrl": {
        "type": "string",
        "metadata": {
          "description": "Not User Configurable -- The base URL for dependent assets",
          "artifactsBaseUrl": ""
        }
      },
      "location": {
        "type": "string",
        "metadata": {
          "description": "Not User Configurable -- Dummy parameter required by portal"
        }
      }
    }
  },
  "variables": {
    "baseUrl": "[concat(parameters('baseUrl'), '/')]",
    "uniqueString": "[uniquestring(resourceGroup().id, deployment().name)]"
  },
  "resources": [
    {
      "name": "nodes",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2016-02-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('baseUrl'), 'nodes.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "nodeCount": {
            "value": "[parameters('nodeCount')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "baseUrl": {
            "value": "[variables('baseUrl')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "nodeAdminURL": {
      "type": "string",
      "value": "[concat('http://vm0-', variables('uniqueString'), '.', variables('location'), '.cloudapp.azure.com:8091')]"
    }
  }
}
