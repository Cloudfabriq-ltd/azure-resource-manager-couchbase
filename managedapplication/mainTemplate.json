{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serverNodeCount": {
      "type": "int"
    },
    "serverDiskSize": {
      "type": "int"
    },
    "syncGatewayNodeCount": {
      "type": "int"
    },
    "vmSize": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "location": {
      "type": "string",
    }
  },
  "variables": {
    "uniqueString": "[uniquestring(resourceGroup().id, deployment().name)]"
  },
  "resources": [
    {
      "type": "Microsoft.Solutions/appliances",
      "name": "couchbase",
      "kind": "marketplace",
      "apiVersion": "2016-09-01-preview",
      "location": "[parameters('location')]",
      "properties": {
        "ManagedResourceGroupId": "[concat(resourceGroup().id,uniquestring(resourceGroup().id))]",
        "PublisherPackageId": "couchbase.couchbase-managed-application-previewcouchbase-managed-application.1.0.0",
        "parameters": {
          "serverNodeCount": {
            "value": "[parameters('serverNodeCount')]"
          },
          "serverDiskSize": {
            "value": "[parameters('serverDiskSize')]"
          },
          "syncGatewayNodeCount": {
            "value": "[parameters('syncGatewayNodeCount')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "uniqueString": {
            "value": "[variables('uniqueString')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "serverAdminURL": {
      "type": "string",
      "value": "[concat('http://vm0.server-', variables('uniqueString'), '.', parameters('location'), '.cloudapp.azure.com:8091')]"
    },
    "syncGatewayAdminURL": {
      "type": "string",
      "value": "[concat('http://vm0.syncgateway-', variables('uniqueString'), '.', parameters('location'), '.cloudapp.azure.com:4985/_admin/')]"
    }
  }
}
